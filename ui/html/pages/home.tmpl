{{define "title"}}Home{{end}}

{{define "main"}}
    <h2>Latest Snippets</h2>
    {{if .Snippet}}
        <table>
            <tr>
                <th>Title </th>
                <th> Created</th>
                <th> Id</th>
            </tr>
            {{range .Snippets}}
                <tr>
                    <td> <a href='/snippet/view?id={{.Id}}'> {{.Title}}  <a></td>
                    <td> {{.Created | humanDate}}</td>
                    <td>#{{.Id}} </td>
                </tr>

            {{end}}
        </table>
    {{else}}
        <p>There's nothing to see here yet!</p>
    {{end}}
{{end}}
